<?xml version="1.0" encoding="UTF-8"?>
<!-- Configuración para IIS (Windows Server) -->
<configuration>
  <system.webServer>
    <!-- Configuración de tipos MIME -->
    <staticContent>
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
    </staticContent>
    
    <!-- Configuración de headers HTTP -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Configuración de reescritura de URLs -->
    <rewrite>
      <rules>
        <!-- Redireccionar a login como página principal -->
        <rule name="Default to Login" stopProcessing="true">
          <match url="^$" />
          <action type="Redirect" url="frontend/html/login.html" />
        </rule>
        
        <!-- Rutas para la API -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/(.*)$" />
          <action type="Rewrite" url="backend/php/api/{R:1}" />
        </rule>
        
        <!-- Rutas para el frontend -->
        <rule name="Frontend Routes" stopProcessing="true">
          <match url="^frontend/(.*)$" />
          <action type="Rewrite" url="frontend/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Configuración de errores personalizados -->
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <remove statusCode="500" subStatusCode="-1" />
      <error statusCode="404" path="/frontend/html/404.html" responseMode="ExecuteURL" />
      <error statusCode="500" path="/frontend/html/500.html" responseMode="ExecuteURL" />
    </httpErrors>
    
    <!-- Configuración de documentos por defecto -->
    <defaultDocument>
      <files>
        <clear />
        <add value="frontend/html/login.html" />
        <add value="test_server.php" />
      </files>
    </defaultDocument>
  </system.webServer>
  
  <!-- Configuración PHP -->
  <system.web>
    <compilation debug="true" />
    <customErrors mode="Off" />
  </system.web>
</configuration>
