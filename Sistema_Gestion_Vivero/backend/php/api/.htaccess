# Configuración para API PHP
RewriteEngine On

# CORS se maneja en PHP (conection.php) para mejor control
# No configurar CORS aquí para evitar conflictos

# Manejar preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Logging de errores
php_flag log_errors on
php_value error_log /tmp/php_errors.log

# Mostrar errores solo en debug
php_value display_errors 0